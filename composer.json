{
    "name": "amazeeio/drupal-integrations",
    "description": "Add this project to any Drupal distribution based on drupal/core-composer-scaffold to enable it for use on Lagoon.",
    "type": "project",
    "license": "MIT",
    "conflict": {
        "drupal/core": "<8.5"
    },
    "scripts": {
        "test": "phpcs"
    },
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/sites/default/default.services.lagoon.development.yml": "assets/default.services.lagoon.development.yml",
                "[web-root]/sites/default/settings.lagoon.php": "assets/settings.lagoon.php",
                "[web-root]/sites/default/settings.php": {
                    "mode": "replace",
                    "path": "assets/initial.settings.php",
                    "overwrite": false
                }
            }
        }
    },
    "require": {
        "drupal/coder": "^8.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2"
    }
}
